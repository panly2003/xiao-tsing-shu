    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.qingshu.ui.home.HomeFragment"
        android:label="首页"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.qingshu.ui.notifications.NotificationsFragment"
        android:label="消息"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.qingshu.ui.search.SearchFragment"
        android:label="搜索"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/navigation_mine"
        android:name="com.example.qingshu.ui.mine.Profile"
