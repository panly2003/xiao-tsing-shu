<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:gravity">center</item>
    </style>
    <style name="CustomTextChecked">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000</item>
    </style>
    <style name="CustomTextUnChecked">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#eee</item>
    </style>
    <style name="MainTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/THU_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>